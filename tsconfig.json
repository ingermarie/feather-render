{
    "compilerOptions": {
        "strict": true,
		"module": "esnext",
        "target": "ESNext",
		"lib": ["dom", "dom.iterable", "esnext"],
        "removeComments": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist"
    },
    "include": [
        "./src/**/*.ts"
    ]
}
